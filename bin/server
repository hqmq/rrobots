#!/usr/bin/env ruby

require "rrobots"
require "socket"

$debug = false

$options = RRobots::OptionsParser.parse!(ARGV)

$socket = UDPSocket.new
$socket.bind("0.0.0.0", 5566)
$registry = Rrobots::PlayerRegistry.new

puts "Starting Server"
loop do
  Rrobots.receive_all_waiting_packets
  Rrobots::NetworkedGame.run()
  sleep(0.1)
end
