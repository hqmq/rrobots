#!/usr/bin/env ruby

require "rrobots"
require "socket"

$debug = false

$players_per_game = 1
$game_width = 1600
$game_height = 1024
port = 5566
$timeout = 60 * 60 * 4 # 4min * 60sec/min * 60fps

$socket = UDPSocket.new
$socket.bind("0.0.0.0", port)
$registry = Rrobots::PlayerRegistry.new

puts "Starting Server"
loop do
  Rrobots.receive_all_waiting_packets
  Rrobots::NetworkedGame.run()
  sleep(0.1)
end
